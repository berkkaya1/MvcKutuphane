@using MvcKutuphane.Models.Entity
@model List<TBL_YAZAR>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>YAZARLAR</h2>

<table class="table table-striped">
    <tr style="background-color: #ff6a00">
        <th>ID</th>
        <th>AD</th>
        <th>SOYAD</th>
        <th>DETAY</th>
        <th>SIL</th>
        <th>GUNCELLE</th>
    </tr>
    @foreach (var y in Model)
    {
        <tr>
            <td>@y.ID</td>
            <td>@y.AD</td>
            <td>@y.SOYAD</td>
            <td>@y.DETAY</td>
            <td>@Html.ActionLink("Sil", "YazarSil", new { id = y.ID }, new { @class = "btn btn-danger", onclick = "return confirm('Silmek istiyor musunuz ?')" })</td>
            <td><a href="/Yazar/YazarGetir/@y.ID" class="btn btn-success">Guncelle</a></td>
        </tr>
    }

</table>

<a class="btn btn-primary" href="/Yazar/YazarEkle/">Yeni Yazar Ekle</a>

